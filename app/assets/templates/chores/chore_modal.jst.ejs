<div class="modal fade" id="chore-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" >Create New Chore</h4>
      </div>
      <div class="modal-body">
        <form id="chore-form" action="">
          <div class="form-group">
            <label for="chore_name">Chore Name</label>
            <input type="text" class="form-control" name="chore[name]" id="chore_name" placeholder="Trash, Dishes, etc">
          </div>
          <div class="form-group">
            <label for="chore_description">Description</label>
            <textarea 
              rows="3" 
              class="form-control" 
              id="chore_description" 
              name="chore[description]"
              placeholder="take out the trash..."></textarea>
          </div>
          <div>
            <label>Frequency</label>
            <br>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="SUN">Sun
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="MON">Mon
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="TUE">Tue
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="WED">Wed
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="THU">Thu
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="FRI">Fri
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="frequency[]" value="SAT">Sat
            </label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="create-chore">Create Chore</button>
      </div>
    </div>
  </div>
</div>
